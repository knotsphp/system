{
  "name": "knotsphp/system",
  "description": "Get information about your system",
  "type": "library",
  "license": "MIT",
  "autoload": {
    "psr-4": {
      "KnotsPHP\\System\\": "src/"
    }
  },
  "authors": [
    {
      "name": "Eser DENIZ",
      "email": "srwiez@gmail.com"
    }
  ],
  "bin": [
    "bin/sysinfo"
  ],
  "minimum-stability": "stable",
  "require": {
    "php": "^8.2",
    "ext-pcre": "*",
    "symfony/process": "^7.2"
  },
  "require-dev": {
    "laravel/pint": "^1.18",
    "pestphp/pest": "^3.5",
    "phpstan/phpstan": "^2.0",
    "symfony/var-dumper": "^7.2",
    "spatie/ray": "^1.41"
  },
  "config": {
    "allow-plugins": {
      "pestphp/pest-plugin": true
    }
  },
  "scripts": {
    "test": "./vendor/bin/pest -p",
    "pint": "./vendor/bin/pint",
    "phpstan": "./vendor/bin/phpstan",
    "static": [
      "@composer pint",
      "@composer phpstan"
    ],
    "qa": [
      "@composer pint",
      "@composer phpstan",
      "@composer test"
    ]
  }
}
